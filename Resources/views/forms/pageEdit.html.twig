{% extends "@c975LPageEdit/layout.html.twig" %}
{% trans_default_domain 'pageedit' %}

{% block pageedit_content %}
    {{ include('@c975LPageEdit/tinymceInit.html.twig') }}

{# Toolbar #}
    {{ toolbar|raw }}

{# Form #}
    {{ form_start(form) }}
        <p class="alert alert-warning text-center">
            {{ 'text.special_formatting'|trans|raw|nl2br }}
        </p>
        {{ form_widget(form) }}

        <div class="form-group">
            <button type="submit" name="submit" title="{{ 'label.modify'|trans }}" class="btn btn-lg btn-primary btn-block">
                {{ 'label.validate'|trans }}
            </button>
        </div>
    {{ form_end(form) }}

{# Cancel #}
    <p class="text-center">
        <a href="javascript:history.back()">
            {{ 'label.cancel'|trans }}</a>
    </p>
{% endblock %}