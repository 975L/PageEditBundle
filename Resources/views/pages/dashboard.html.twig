{% extends "@c975LPageEdit/layout.html.twig" %}
{% trans_default_domain 'pageedit' %}
{% set title = 'label.dashboard'|trans %}

{% block pageedit_content %}
{# Toolbar #}
    {{ toolbar|raw }}
{# Title #}
    <div class="text-center">
        <h2>
            {{ 'text.list_pages'|trans }}
            {% if app.request.query.get('v') == null %}
                ({{ 'label.current'|trans }})
            {% elseif app.request.query.get('v') == 'archived' %}
                ({{ 'label.archived'|trans }})
            {% elseif app.request.query.get('v') == 'deleted' %}
                ({{ 'label.deleted'|trans }})
            {% elseif app.request.query.get('v') == 'redirected' %}
                ({{ 'label.redirected'|trans }})
            {% endif %}
        </h2>
{# Links to different kind of pages #}
        <p>
{# Current pages #}
            {% if app.request.query.get('v') == null %}
                <strong>{{ 'label.view_current_pages'|trans }}</strong>
            {% else %}
                <a href="?v=">{{ 'label.view_current_pages'|trans }}</a>
            {% endif %}
            &nbsp;-&nbsp;
{# Archived #}
            {% if app.request.query.get('v') == 'archived' %}
                <strong>{{ 'label.view_archived_pages'|trans }}</strong>
            {% else %}
                <a href="?v=archived">{{ 'label.view_archived_pages'|trans }}</a>
            {% endif %}
            &nbsp;-&nbsp;
{# Deleted #}
            {% if app.request.query.get('v') == 'deleted' %}
                <strong>{{ 'label.view_deleted_pages'|trans }}</strong>
            {% else %}
                <a href="?v=deleted">{{ 'label.view_deleted_pages'|trans }}</a>
            {% endif %}
            &nbsp;-&nbsp;
{# Redirected #}
            {% if app.request.query.get('v') == 'redirected' %}
                <strong>{{ 'label.view_redirected_pages'|trans }}</strong>
            {% else %}
                <a href="?v=redirected">{{ 'label.view_redirected_pages'|trans }}</a>
            {% endif %}
        </p>
{# List of pages and actions #}
        <table class="table table-hover table-condensed table-responsive">
            <thead>
                <tr>
                    <th class="text-center"><span class="glyphicon glyphicon-eye-open"></span>&nbsp;{{ knp_pagination_sortable(pages, 'label.title'|trans, '[title]') }}&nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                    <th class="text-center">{{ knp_pagination_sortable(pages, 'label.semantic_url'|trans, '[slug]') }}&nbsp;<span class="glyphicon glyphicon-sort"></span></th>
                    {% if app.request.query.get('v') == null %}
                        <th class="text-center"><span class="glyphicon glyphicon-pencil"></span>&nbsp;{{ 'label.modify'|trans }}</th>
                        <th class="text-center"><span class="glyphicon glyphicon-duplicate"></span>&nbsp;{{ 'label.duplicate'|trans }}</th>
                    {% endif %}
                    <th class="text-center"><span class="glyphicon glyphicon-trash"></span>&nbsp;{{ 'label.delete'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for page in pages %}
                    <tr>
{# Title & Display #}
                        <td class="text-center">
                            {% if page.status == 'archived' %}
                                <a href="{{ path('pageedit_display_archived', {'page': page.slug}) }}" title="{{ 'label.display'|trans }}">{{ page.title }}</a>
                            {% elseif page.status == 'deleted' %}
                                <a href="{{ path('pageedit_display_deleted', {'page': page.slug}) }}" title="{{ 'label.display'|trans }}">{{ page.title }}</a>
                            {% elseif page.status == 'redirected' %}
                                <a href="{{ path('pageedit_display_redirected', {'page': page.slug}) }}" title="{{ 'label.display'|trans }}">{{ page.title }}</a>
                            {% else %}
                                <a href="{{ path('pageedit_display', {'page': page.slug}) }}" title="{{ 'label.display'|trans }}">{{ page.title }}</a>
                            {% endif %}
                        </td>
{# Slug #}
                        <td class="text-center">
                            {% if '/' in page.slug %}
                                <strong>{{ page.slug|replace({(page.slug|split('/')|last): ''}) }}</strong>{{ page.slug|split('/')|last }}
                            {% else %}
                                {{ page.slug }}
                            {% endif %}
                        </td>
{# Edit #}
                        {% if page.status == 'current' %}
                            <td class="text-center">
                                <a href="{{ path('pageedit_edit', {'page': page.slug}) }}" title="{{ 'label.modify'|trans }}">{{ 'label.modify'|trans }}</a>
                            </td>
                        {% endif %}
{# Duplicate #}
                        {% if page.status == 'current' %}
                            <td class="text-center">
                                <a href="{{ path('pageedit_duplicate', {'page': page.slug}) }}" title="{{ 'label.duplicate'|trans }}">{{ 'label.duplicate'|trans }}</a>
                            </td>
                        {% endif %}
{# Delete #}
                        <td class="text-center">
                            {% if page.status == 'archived' %}
                                <a href="{{ path('pageedit_delete_archived', {'page': page.slug}) }}" title="{{ 'label.delete'|trans }}" class="text-danger">{{ 'label.delete'|trans }}</a>
                            {% elseif page.status == 'deleted' %}
                                <a href="{{ path('pageedit_delete_deleted', {'page': page.slug}) }}" title="{{ 'label.delete'|trans }}" class="text-danger">{{ 'label.delete'|trans }}</a>
                            {% elseif page.status == 'redirected' %}
                                <a href="{{ path('pageedit_delete_redirected', {'page': page.slug}) }}" title="{{ 'label.delete'|trans }}" class="text-danger">{{ 'label.delete'|trans }}</a>
                            {% else %}
                                <a href="{{ path('pageedit_delete', {'page': page.slug}) }}" title="{{ 'label.delete'|trans }}" class="text-danger">{{ 'label.delete'|trans }}</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
{# No pages #}
        {% if pages.getTotalItemCount == 0 %}
            <p class="alert alert-info">
                {{ 'label.no_pages'|trans }}
            </p>
        {% endif %}
{# Pagination #}
        <div class="navigation text-center">
            {{ knp_pagination_render(pages) }}
        </div>
    </div>
{% endblock %}