{% extends "@c975LPageEdit/layout.html.twig" %}
{% trans_default_domain 'pageedit' %}

{% block pageedit_content %}
{# Toolbar #}
    {{ toolbar|raw }}

{# List of pages and actions #}
    <div class="text-center">
        <h2>
            {{ 'text.list_pages'|trans }}
        </h2>
        <table class="table table-hover table-condensed table-responsive">
            <thead>
                <tr>
                    <th class="text-center">{{ 'label.title'|trans }}</th>
                    <th class="text-center">{{ 'label.semantic_url'|trans }}</th>
                    <th class="text-center"><span class="glyphicon glyphicon-eye-open"></span> {{ 'label.display'|trans }}</th>
                    <th class="text-center"><span class="glyphicon glyphicon-pencil"></span> {{ 'label.modify'|trans }}</th>
                    <th class="text-center"><span class="glyphicon glyphicon-trash"></span> {{ 'label.delete'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for page in pages %}
                    <tr>
{# Title #}
                        <td class="text-center">
                            {{ page.title }}
                        </td>
{# Slug #}
                        <td class="text-center">
                            {{ page.slug }}
                        </td>
{# Display #}
                        <td class="text-center">
                            <a href="{{ path('pageedit_display', {'page': page.slug}) }}" title="{{ 'label.display'|trans }}">{{ 'label.display'|trans }}</a>
                        </td>
{# Edit #}
                        <td class="text-center">
                            {% if page.protected == false %}
                                <a href="{{ path('pageedit_edit', {'page': page.slug}) }}" title="{{ 'label.modify'|trans }}">{{ 'label.modify'|trans }}</a>
                            {% else %}
                                {{ 'label.protected'|trans }}
                            {% endif %}
                        </td>
{# Delete #}
                        <td class="text-center">
                            {% if page.protected == false %}
                                <a href="{{ path('pageedit_delete', {'page': page.slug}) }}" title="{{ 'label.delete'|trans }}" class="text-danger">{{ 'label.delete'|trans }}</a>
                            {% else %}
                                {{ 'label.protected'|trans }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

{# Pagination #}
        <div class="navigation text-center">
            {{ knp_pagination_render(pages) }}
        </div>
    </div>
{% endblock %}