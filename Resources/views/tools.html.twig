{% trans_default_domain 'toolbar' %}

{% spaceless %}
{# Dashboard #}
{{ toolbar_button(path('pageedit_dashboard'), 'dashboard', 'label.pageedit'|trans) }}

{# Display #}
{% if type == 'modify' or type == 'delete' or type == 'deleteArchived' or type == 'deleteDeleted' or type == 'deleteRedirected' %}
    {% if type == 'deleteArchived' %}
        {{ toolbar_button(path('pageedit_display_archived', {'page': object}), 'display') }}
    {% elseif type == 'deleteDeleted' %}
        {{ toolbar_button(path('pageedit_display_deleted', {'page': object}), 'display') }}
    {% elseif type == 'deleteRedirected' %}
        {{ toolbar_button(path('pageedit_display_redirected', {'page': object}), 'display') }}
    {% else %}
        {{ toolbar_button(path('pageedit_display', {'page': object}), 'display') }}
    {% endif %}
{% endif %}

{# New #}
{% if type != 'new' %}
    {{ toolbar_button(path('pageedit_new'), 'new') }}
{% endif %}

{# Edit #}
{% if type == 'display' or type == 'delete' %}
    {{ toolbar_button(path('pageedit_modify', {'page': object}), 'modify') }}
{% endif %}

{# Duplicate #}
{% if type == 'display' or type == 'modify' %}
    {{ toolbar_button(path('pageedit_duplicate', {'page': object}), 'duplicate') }}
{% endif %}

{# Pdf #}
{% if type == 'display' %}
    {{ toolbar_button(path('pageedit_pdf', {'page': object}), 'pdf') }}
{% endif %}

{# Cancel #}
{% if type != 'dashboard' %}
    {{ toolbar_button('cancel', 'cancel') }}
{% endif %}

{# Delete #}
{% if type == 'display' or type == 'modify' or type == 'archived' or type == 'deleted' or type == 'redirected' %}
    {% if type == 'archived' %}
        {{ toolbar_button(path('pageedit_delete_archived', {'page': object}), 'delete') }}
    {% elseif type == 'deleted' %}
        {{ toolbar_button(path('pageedit_delete_deleted', {'page': object}), 'delete') }}
    {% elseif type == 'redirected' %}
        {{ toolbar_button(path('pageedit_delete_redirected', {'page': object}), 'delete') }}
    {% else %}
        {{ toolbar_button(path('pageedit_delete', {'page': object}), 'delete') }}
    {% endif %}
{% endif %}

{# Help #}
{% if type != 'help' %}
    {{ toolbar_button(path('pageedit_help'), 'help') }}
{% endif %}

{# Signout #}
{{ toolbar_button(path('user_signout'), 'signout') }}

{# Other dashboards #}
{{ toolbar_dashboards('md') }}
{% endspaceless %}